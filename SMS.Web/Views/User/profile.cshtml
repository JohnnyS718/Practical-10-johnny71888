@model User

<div class="card rounded shadow p-4">
    <!-- Display student details -->
    <div class="row">
        <!-- Details and Navigation -->
        <div class="col-8 d-flex flex-column justify-content-between">
            <!-- Student details -->
            <div>
                <h2 class="mb-4 text-primary">Student Details</h2>
                <dl class="row">  
                    <dt class="col-4 pb-1">Name</dt>
                    <dd class="col-8 pb-1">@Model.Name</dd>
                    
                    <dt class="col-4 pb-1">Email</dt>
                    <dd class="col-8 pb-1">@Model.Email</dd>

                    <dt class="col-4 pb-1">Role</dt>
                    <dd class="col-8 pb-1">@Model.Role</dd>
                </dl>
            </div>

            <!-- Navigation links -->
            <div>               
                <!-- navigation link to Index action -->
                <a asp-controller="Home" asp-action="Index" class="btn btn-sm btn-outline-primary" aria-label="Home Page">
                    <i class="bi bi-house" title="home Page"></i>
                    <span class="ms-1 d-none d-md-inline">Home</span>
                </a>

    </div>    
</div>